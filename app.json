{
  "expo": {
    "name": "Pigeon",
    "slug": "pigeon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pigeon",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.pigeon.app",
      "infoPlist": {
        "NSLocationAlwaysUsageDescription": "Pigeon monitors spending danger zones in the background to help you avoid regrettable purchases with instant, on-device AI nudges.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Pigeon monitors spending danger zones in the background to help you avoid regrettable purchases with instant, on-device AI nudges.",
        "NSLocationWhenInUseUsageDescription": "Pigeon needs your location to identify nearby merchants and provide smart purchase nudges.",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "package": "com.pigeon.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "./modules/on-device-predictor/plugin"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}